<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d" 
        Title="Color Checker" Height="350" Width="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin="10" Background="Black"/>

        <!-- スライダーとコンボボックス -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- R,G,B スライダー、テキストボックス -->
            <TextBlock x:Name="rText" Grid.Row="0" Grid.Column="0" Text="R" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" 
                     Text="{Binding ElementName=rSlider, Path=Value , UpdateSourceTrigger=PropertyChanged , StringFormat={}{0:0}}"/>
            <TextBlock x:Name="gText" Grid.Row="1" Grid.Column="0" Text="G" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" 
                     Text="{Binding ElementName=gSlider, Path=Value , UpdateSourceTrigger=PropertyChanged , StringFormat={}{0:0}}"/>
            <TextBlock x:Name="bText" Grid.Row="2" Grid.Column="0" Text="B" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" 
                     Text="{Binding ElementName=bSlider, Path=Value , UpdateSourceTrigger=PropertyChanged , StringFormat={}{0:0}}"/>

            <!-- 色選択用ComboBox -->
            <ComboBox x:Name="colorSelectComboBox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0" Height="30" 
                      SelectionChanged="ColorSelectComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5,0">
                            <Border Width="20" Height="20" Margin="0,0,5,0" BorderThickness="1" BorderBrush="Black">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- ストックボタンとリスト -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="stockButton" Content="STOCK" Grid.Row="0" Height="30" Click="stockButton_Click"/>
            <ListBox x:Name="stockList" Grid.Row="1" FontSize="16" SelectionChanged="stockList_SelectionChanged" Margin="0,0,0,70"/>

            <!-- リセットボタンとダークモード切替 -->
            <Button x:Name="resetButton" Content="リセット" Grid.Row="1"  Height="20" Click="ResetButton_Click" Margin="0,195,0,45"/>
            <Button x:Name="darkModeButton" Content="ダークモード" Grid.Row="1"  Height="20" Click="DarkModeButton_Click" RenderTransformOrigin="0.200,2.50" Margin="0,220,0,10"/>

            <!--  ランダム -->
            <Button x:Name="randomColorButton" Content="ランダム色" Grid.Row="1" Height="20" Margin="0,245,0,0" Click="RandomColorButton_Click"/>

        </Grid>

    </Grid>
</Window>
