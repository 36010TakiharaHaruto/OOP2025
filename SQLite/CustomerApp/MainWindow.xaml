<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理アプリケーション"
        Width="1000"
        Height="600"
        Background="#d3d3d3">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="#d3d3d3"  Margin="0,0,20,0">
            <TextBlock Text="顧客情報" FontSize="24" FontWeight="Bold" Foreground="#555" Margin="0,0,0,20"/>
            <TextBlock Text="名前" Foreground="#555" FontSize="15"/>
            <TextBox x:Name="NameTextBox" Height="30" Margin="0,5,0,15"/>
            <TextBlock Text="電話番号" Foreground="#555" FontSize="15"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Margin="0,5,0,15"/>
            <TextBlock Text="住所" Foreground="#555" FontSize="15"/>
            <TextBox x:Name="AddressTextBox" Height="30" Margin="0,5,0,15"/>
            <Button x:Name="PictureButton"
                    Content="画像を選択"
                    Click="PictureButton_Click"
                    Background="#808080"
                    Foreground="White"
                    Margin="0,5,0,20"
                    Padding="10"/>
            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button x:Name="SaveButton" Content="保存" Click="SaveButton_Click"
                        Background="#808080" Foreground="White" Margin="5" Padding="20"/>
                <Button x:Name="UpdateButton" Content="更新" Click="UpdateButton_Click"
                        Background="#808080" Foreground="White" Margin="5" Padding="20"/>
                <Button x:Name="DeleteButton" Content="削除" Click="DeleteButton_Click"
                        Background="#808080" Foreground="White" Margin="5" Padding="20"/>
            </WrapPanel>
        </StackPanel>
        <ScrollViewer Grid.Column="1"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="検索" Foreground="#555" FontSize="15"/>
                <TextBox x:Name="SearchTextBox"
                 FontSize="16"
                 Height="35"
                 Margin="0,0,0,10"
                 Padding="5"
                 TextChanged="SerchTextBox_TextChanged"
                 ToolTip="検索キーワードを入力"/>
                
                
                <TextBlock Text="郵便番号" Foreground="#555" FontSize="15"/>
                <TextBox x:Name="PostalCodeTextBox" Height="30" Margin="0,5,0,15" TextChanged="PostalCodeTextBox_TextChanged"/>



                <ListView x:Name="PersonListView"
                  SelectionChanged="PersonListView_SelectionChanged"
                  Background="White"
                  BorderBrush="#CCC"
                  BorderThickness="1"
                  Padding="10"
                  MaxHeight="500"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CCC" BorderThickness="0,0,0,1" Padding="10" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding PictureImage}" Width="120" Height="60" Margin="5"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                                        <TextBlock Text="{Binding Phone}" FontSize="16" Foreground="#4169e1"/>
                                        <TextBlock Text="{Binding Address}" FontSize="16" Foreground="#008000"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>