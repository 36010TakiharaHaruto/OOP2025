<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp" SizeToContent="Height"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="名前" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Height="30" Margin="0,0,0,10"/>
            <TextBlock Text="電話番号" FontWeight="Bold"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Margin="0,0,0,10"/>
            <TextBlock Text="住所" FontWeight="Bold"/>
            <TextBox x:Name="AddressTextBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="画像を選択" x:Name="PictureButton" Click="PictureButton_Click" Margin="0,0,0,10"/>


            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Margin="5" Padding="10,5"/>
                <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="5" Padding="10,5"/>
                <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Margin="5" Padding="10,5"/>
            </WrapPanel>

            <TextBox x:Name="SearchTextBox" FontSize="16" Height="30" Margin="0,5,0,0" TextChanged="SerchTextBox_TextChanged"/>

            <ListView x:Name="PersonListView" Margin="0,5,0,0" Height="600" SelectionChanged="PersonListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding PictureImage}" Width="60" Height="60" Margin="5"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" FontSize="20"/>
                                <TextBlock Text="{Binding Address}" FontSize="20"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackPanel>
    </Grid>
</Window>

